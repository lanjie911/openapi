el-dialog(title="创建应用",:visible.sync="appPanel.isShow",width="25%")
    el-row(style="margin-bottom:10px")
        el-col(:span="24" style="text-align:center;")
            el-input(v-model="appPanel.app_name",placeholder="请输入应用名称", maxlength="32" style="width:210px;",type="input" autofocus="true")
    el-row(style="margin-bottom:10px")
        el-col(:span="24" style="text-align:center;")
            el-input(v-model="appPanel.app_ip",placeholder="请输入调用者IP地址", maxlength="32" style="width:210px;",type="input")
    el-row(style="margin-bottom:10px")
        el-col(:span="24" style="text-align:center;")
            el-select(v-model="appPanel.app_type" placeholder="请选择应用类型" style="width:210px;")
                el-option(label="短信" value="100")
    el-row(style="margin-bottom:10px")
        el-col(:span="24" style="text-align:center;")
            el-input(v-model="appPanel.app_desc",placeholder="请输入应用描述", maxlength="144" show-word-limit style="width:210px;",type="textarea" resize="none" rows="3")
    el-row
        el-col(:span="12" style="text-align:right;")
            el-button(style="margin-right:10px;") 确定
        el-col(:span="12" style="text-align:left;")
            el-button(style="margin-left:5px;") 取消